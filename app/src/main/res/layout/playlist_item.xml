<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediaNameTextView"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Scooby Doo" android:textColor="@color/app_primary_text_color"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediaTypeTextView"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/mediaNameTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            tools:text="video" android:textColor="@color/app_accent_text_dark"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mediaTimeOfPlayTextView"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mediaNameTextView"
            app:layout_constraintEnd_toStartOf="@+id/mediaTypeTextView"
            app:layout_constraintStart_toStartOf="@+id/mediaNameTextView"
            app:layout_constraintHorizontal_bias="0.0"
            tools:text="evening, morning, afternoon" android:textColor="@color/app_secondary_text_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>