<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings">

    <Button
            android:text="@string/device_info"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/deviceInfo" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.358"/>
    <Button
            android:text="@string/refresh_adverts"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/refresh_adverts" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/deviceInfo" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="@string/logout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/logout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/refresh_adverts" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>