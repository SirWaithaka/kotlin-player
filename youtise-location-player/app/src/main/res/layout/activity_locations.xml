<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Locations">

    <Spinner
            android:layout_width="894dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp" android:id="@+id/locations"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.388"
            android:textAlignment="textStart" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/locations" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
</android.support.constraint.ConstraintLayout>