<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Password">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:focusedByDefault="true"
            android:imeOptions="actionDone"
            android:id="@+id/enterPassword" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:text="@string/enter_password" android:textAlignment="center"
            android:textStyle="bold" android:autofillHints="no" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.393"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="41dp"
            android:id="@+id/passwordMessages" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/enterPassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:textAlignment="center"
    />
</android.support.constraint.ConstraintLayout>